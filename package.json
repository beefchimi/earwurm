{
  "name": "earwurm-monorepo",
  "version": "0.0.0",
  "description": "Monorepo for the Earwurm TypeScript project",
  "author": "Curtis Dulmage",
  "license": "ISC",
  "keywords": [],
  "homepage": "https://github.com/beefchimi/earwurm#readme",
  "bugs": {
    "url": "https://github.com/beefchimi/earwurm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beefchimi/earwurm.git"
  },
  "private": true,
  "engines": {
    "node": ">=20.13.0",
    "pnpm": ">=9.1.0"
  },
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "clean": "pnpm -r clean && rm -rf coverage",
    "nuke": "pnpm clean && ./scripts/nuke.sh",
    "start": "pnpm --filter earwurm build && pnpm -r --parallel --stream start",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint && eslint .",
    "lint:fix": "pnpm -r lint:fix && eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "pnpm build && pnpm -r type-check",
    "test": "vitest --pool forks",
    "test:ui": "vitest --ui",
    "coverage": "vitest --run --coverage",
    "report": "changeset",
    "release:version": "changeset version",
    "release:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.5",
    "@types/node": "^20.12.13",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-love": "^51.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.3.0",
    "happy-dom": "^14.12.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vitest": "^1.6.0"
  }
}
